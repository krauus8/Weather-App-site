<link href="style.css" rel="stylesheet">
    <title>Weather Report</title>

  </head>
  <body class="scrolling-image-container">
      <div><h1>Daily weather Report</h1></div>
      <div class=" topContainer card">
        <h3 class="infoElement">My city (IP address)</h3>
        <p class="infoElement"><%=h_name%></p>
        <p class="infoElement"><%=h_temp%> °C</p>
        <!-- <img  class="infoElement"<%= h_icon %>/> -->
        <p class="infoElement"><%=h_feels%></p>
      
      </div>
     <hr>
        <div class="form-inline ">
          <form class="form-group mx-sm-3 mb-2" action="/" method="post" autocomplete="off">
              <input class="form-control " name="city" id="cityname" type="text" placeholder="Enter city name" />
              <button class  = "btn btn-large  "type="submit">Add City</button>
          </form>
        </div>
         <div class = "cityContainer row"> 
      <%  city.forEach((item)=>{%>
          <!-- <div class=" cityInfo card">  -->
            <span class="card cityInfo"> 
              <p class="infoElement"> <%=item.cityName%> </p>
              <p class="infoElement" > <%=item.feelslike%></p>
              <img class="infoElement" <%= item.weatherIcon %> />       
              <p class="infoElement" > <%=item.temparature%> °C </p></span>
        <%    })   %>       
          <!-- </div> -->
      </div>
      <!-- <div class="scrolling-image"> -->
        <!-- <img src="cloud-computing.png" alt=""> -->
      <!-- </div> -->
      
      
  </body>
  <footer>
    <p style="text-align: center; margin-top: 15rem;">@Krauus8</p>
